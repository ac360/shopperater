<div id="login-container">

    <h2 id="signup-title" class="m-font-bold m-centered">Log In</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    	<div>
      		<p>
      			<%= f.text_field :login, :class => 'form-control m-centered', :placeholder => 'Username or Email' %>
      		</p>
    	</div>

      	<div>
      		<%= f.password_field :password, :class => 'form-control m-centered', :placeholder => 'Password' %>
    	</div>

      	<div>
          <center>
      		<%= f.submit "Sign in", :class => 'btn btn-primary', :style => 'min-width:190px;height:50px;background:#222222;' %>
          </center>
      	</div>

    <% end %>
    <div class="m-centered" style="padding-top:25px;">
      <%= render :partial => "devise/shared/links" %>
    </div>

</div>