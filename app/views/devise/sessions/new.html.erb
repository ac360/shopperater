<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div>
  		<p>
  			<%= f.label 'Username or Email' %><br />
  			<%= f.text_field :login %>
  		</p>
	</div>

  	<div>
  		<%= f.label :password %><br />
  		<%= f.password_field :password %>
	</div>

  	<div>
  		<%= f.submit "Sign in", :class => 'btn btn-primary' %>
  	</div>

<% end %>

<%= render :partial => "devise/shared/links" %>