
	<h2 id="medley-title-browser" class="s-grey s-font-bold s-centered"><%= model.title %></h2>
	<div class="row">
		<div id="medley-container" class="col-offset-2 col-lg-8">

			<div class="gridster">
	    		<ul id="medley-grid" class="list-unstyled">

	    			<% _.each(model.items, function(model) { %>
	    			
		    			<% if ( model.id !== null ) { %>
		    			<% console.log("This is Being Rendered In The View:", model) %>
			    				<li class="medley-grid-item" data-row="<%= model.r %>" data-col="<%= model.c %>" data-sizex="<%= model.x %>" data-sizey="<%= model.y %>" data-id="<%= model.id %>" data-title="<%= model.title %>" data-price="<%= model.price %>" data-imagesmall="<%= model.img_small %>" data-imagelarge="<%= model.img_big %>" data-category="<%= model.category %>" data-source="<%= model.source %>" data-link="<%= model.link %>">

				    					<div id="medley-item-image-container">
											<img src="<%= model.img_small %>" class="product-image" draggable="false">
										</div>

										<div id="medley-item-title-container" style="display:none">
											<h1 class="m-font-two product-title" contenteditable="true">
												<%= model.title %>
											</h1>
											<div class="product-option-icons">
												<i class="glyphicon glyphicon-search"></i>
											</div>
										</div>

			    				</li>
		    			<% } %>
		    		<% }); %>
		    		
	    		</ul>
	    	</div>

		</div>
	</div> <!-- .row -->

	<div class="row">
		<div id="medley-description" class="col-offset-2 col-lg-5 m-font-light">
			<%= model.description %>
		</div>

		<div class="col-lg-3">

			<div class="row">
				<div id="owner-info-container" class="col-lg-12">
					<p id="created-by" style="margin-bottom:3px;">Created by</p>
					<h3 id="created-by-username"><%= model.user.username %></h3>
				</div>
			</div>
			<div class="row">
				<div id="actions-container" class="col-lg-12">
					<button id="remix-btn" class="btn btn-primary btn-publish">Remix</button>
					<p style="padding-top:3px;">
						<a href="#" class="m-centered m-font-light" style="font-size:13px;">
							Follow User
						</a>
					</p>
				</div>
			</div>

		</div>

	</div>


	<!-- Modals -->
	
    <!-- Remix Modal -->
    <div id="remix-modal" class="modal animated remixed fade">
      <div class="modal-dialog">
        <div class="modal-content animated remixed">
          <h1 class="s-centered s-font-bold" style="font-size:50px;margin-bottom:0px;line-height:60px;margin-top:35px;">Remix</h1>
        <h3 class="s-centered m-font-light" style="margin:15px 0px;font-size:16px;color:rgb(51, 51, 51);">Want To Make Your Own Medley Out Of This One?</h3>
        <p id="editor-link-container" class="s-centered" style="margin-top:35px;"><a href="#" id="editor-button" class="btn btn-primary" style="width:150px;padding:15px;font-size:12px;">YES</a></p>
        <p class="s-centered"><a id="cancel-remix-link" class="m-font-light" style="font-size:14px;" data-dismiss="modal" aria-hidden="true">No Thanks</a></p>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /#remix-modal -->



