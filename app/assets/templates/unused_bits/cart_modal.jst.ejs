<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h4 class="modal-title">Your Shopping Cart</h4>
</div>
<div class="modal-body">
	
	<ul class="list-unstyled">

		<% _.each(collection, function(collection, index) { %>
				<li><button type="button" id="delete-cart-item-button" class="close" data-index="<%= index %>">&times;</button> <span style="font-size:12px;font-weight:bold"><%= collection.title %></span></li>
				<li class="s-grey" style="font-size:10px;color:#999">Category: <%= collection.product_group %></li>
		<% }); %>

	</ul>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>



